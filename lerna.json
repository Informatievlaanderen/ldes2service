{
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "message": "Bump to release version %s",
      "allowBranch": "main",
      "npmClient": "npm"
    }
  },
  "packages": [
    "packages/*"
  ],
  "useWorkspaces": "true",
  "loglevel": "success",
  "registry": "https://registry.npmjs.org/",
  "npmClient": "yarn",
  "npmClientArgs": [
    "--pure-lockfile"
  ]
}
